{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/api",
    "rootDir": "./api",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules", "dist"]
}
